{
  "name": "QRGoPass - Common IO",
  "dockerComposeFile": [
    // Always first to ensure docker starts from a consistent location
    "${localWorkspaceFolder}/.devcontainer/qrgopass-io-common/docker-compose.yml",
    // The actual devcontainer
    "${localWorkspaceFolder}/.devcontainer/common/nodejs/docker-compose.yml",
    "${localWorkspaceFolder}/.devcontainer/common/behaviours/filesystem.yml",
    // Common Network
    "${localWorkspaceFolder}/qrgopass-io/common/docker/networking/docker-compose.yml",
    // Localstack
    "${localWorkspaceFolder}/qrgopass-io/common/docker/localstack/docker-compose.yml"
  ],
  "remoteUser": "node",
  "workspaceFolder": "/workspace/qrgopass-io/common",
  "service": "dev-container",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "4ops.terraform"
      ],
      "settings": {
        "files.enableSymlinks": true
      }
    }
  }
}